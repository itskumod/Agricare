{
  "name": "Python Dev Container",
  "image": "mcr.microsoft.com/devcontainers/python:3.11-bookworm",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },

  "updateContentCommand": "[ -f packages.txt ] && sudo apt update && sudo xargs apt install -y < packages.txt; [ -f requirements.txt ] && pip install -r requirements.txt",

  "postAttachCommand": {
    "run": "streamlit run agricare.py --server.enableCORS false --server.enableXsrfProtection false"
  },

  "portsAttributes": {
    "8501": {
      "label": "Streamlit App",
      "onAutoForward": "openPreview"
    }
  }
}
